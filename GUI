import javax.swing.*;
import java.awt.event.*;
class BankAccount {
    private double balance;
    public BankAccount(double balance) {
        this.balance = balance;
    }
    public void deposit(double amount) {
        balance += amount;
    }
    public boolean withdraw(double amount) {
        if (amount > balance) {
            return false;
        }
        balance -= amount;
        return true;
    }
    public double getBalance() {
        return balance;
    }
}
public class BankGUI extends JFrame {
    BankAccount account = new BankAccount(1000); // initial balance
    JLabel label = new JLabel("Enter Amount:");
    JTextField amountField = new JTextField();
    JButton depositBtn = new JButton("Deposit");
    JButton withdrawBtn = new JButton("Withdraw");
    JButton balanceBtn = new JButton("Check Balance");
    JTextArea output = new JTextArea();
    public BankGUI() {
        setTitle("Bank Account System");
        setSize(350, 300);
        setLayout(null);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        label.setBounds(20, 20, 120, 30);
        amountField.setBounds(150, 20, 150, 30);
        depositBtn.setBounds(20, 70, 120, 30);
        withdrawBtn.setBounds(150, 70, 120, 30);
        balanceBtn.setBounds(80, 120, 150, 30);
        output.setBounds(20, 160, 280, 80);
        output.setEditable(false);
        add(label);
        add(amountField);
        add(depositBtn);
        add(withdrawBtn);
        add(balanceBtn);
        add(output);
        depositBtn.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                String text = amountField.getText();
                try {
                    double amt = Double.parseDouble(text);
                    account.deposit(amt);
                    output.setText("Deposited: " + amt);
                } catch (Exception ex) {
                    output.setText("Invalid amount!");
                }
            }
        });
        withdrawBtn.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                String text = amountField.getText();
                try {
                    double amt = Double.parseDouble(text);
                    if (account.withdraw(amt)) {
                        output.setText("Withdrawn: " + amt);
                    } else {
                        output.setText("Insufficient balance!");
                    }
                } catch (Exception ex) {
                    output.setText("Invalid amount!");
                }
            }
        });
        balanceBtn.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                output.setText("Current Balance: " + account.getBalance());
            }
        });
        setVisible(true);
    }
    public static void main(String[] args) {
        new BankGUI();
    }
}
